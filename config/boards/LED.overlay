#include <dt-bindings/led/led.h>

&pinctrl {
    spi3_default: spi3_default {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 1, 15)>;
        };
    };

    spi3_sleep: spi3_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_MOSI, 1, 15)>;
            low-power-enable;
        };
    };
};

&spi3 {
    compatible = "nordic,nrf-spim";
    status = "okay";

    pinctrl-0 = <&spi3_default>;
    pinctrl-1 = <&spi3_sleep>;
    pinctrl-names = "default", "sleep";

    led_strip: sk6812@0 {
        compatible = "sk6812-spi";

        /* SPI */
        reg = <0>; /* obligatoire mais ignoré pour SPI */
        spi-max-frequency = <4000000>; /* Vérifiez que votre modèle supporte cette fréquence */

        /* SK6812 */
        chain-length = <1>; /* nombre de LEDs */
        spi-one-frame = <0x70>; /* Configuration similaire à WS2812 */
        spi-zero-frame = <0x40>; /* Configuration similaire à WS2812 */
        color-mapping = <LED_COLOR_ID_GREEN
                         LED_COLOR_ID_RED
                         LED_COLOR_ID_BLUE>;
    };
};